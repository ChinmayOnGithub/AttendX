<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background_ember"
    tools:context=".attendance.AttendanceTakingActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_dashboard"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="#F98012"
        android:contentInsetStart="0dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/attendance_taking_courseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="12dp"
                android:fontFamily="sans-serif-light"
                android:hint="Attendance for theory of computation"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:textColor="@color/white"
                android:textSize="28sp" />

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#AAAAAA"
        android:layout_below="@+id/toolbar_dashboard"
        android:text="Attendance Taking"/>


    <LinearLayout
        android:id="@+id/linear_layout_3_buttons"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_dashboard"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="vertical">


        <Button
            android:id="@+id/attendance_taking_create_session_in_previous_module"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:backgroundTint="@color/card_view_color"
            android:fontFamily="sans-serif-light"
            android:padding="16dp"
            android:text="List previous modules"
            android:textColor="@color/text_in_button"
            android:textSize="18sp" />

        <Button
            android:id="@+id/attendance_taking_create_session"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/card_view_color"
            android:fontFamily="sans-serif-light"
            android:padding="16dp"
            android:text="Create session in current module"
            android:textColor="@color/text_in_button"
            android:textSize="18sp" />


        <Button
            android:id="@+id/attendance_taking_take_attendance"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/card_view_color"
            android:fontFamily="sans-serif-light"
            android:padding="16dp"
            android:text="Take attendance"
            android:textColor="@color/text_in_button"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="30dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/attendance_taking_create_module"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/round_button_with_plus"
            android:contentDescription="Create A Module"
            android:fontFamily="sans-serif-light"
            android:padding="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create New Module"
            android:textAlignment="center"
            android:textColor="#717171"
            android:textSize="16sp" />

    </LinearLayout>


</RelativeLayout>